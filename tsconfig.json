{
  "compilerOptions": {
    "baseUrl": ".", // Ensure baseUrl is set for absolute imports
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // Disable since you're using TypeScript exclusively
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Ensure moduleResolution is 'node'
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/saveData/route.js",
    "app/api/libraryStats/[id]/route.js",
    "components/ui/StatsTable.tsx", // Updated to .tsx
    "app/updatestatus/page.tsx",
    "lib/db.ts",
    "lib/utils.ts"
  ],
  "exclude": ["node_modules"]
}
